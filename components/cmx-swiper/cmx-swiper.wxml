<!--components/cmx-swiper/cmx-swiper.wxml-->
<swiper class="swiper"
 circular
 autoplay 
 interval='3000' 
 duration="300" 
 indicator-dots
 indicator-active-color="#3399FF"
 indicator-color="#FFFFFF"
 >
<block wx:for="{{banner}}" wx:key="{{index}}">
<swiper-item class="swiper-item">
<image src="{{item.image}}" mode="widthFix"/>
</swiper-item>
</block>
</swiper>
