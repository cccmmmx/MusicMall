/* pages/home/music-item/music-item.wxss */
.music{
 margin: 60px auto;
background: #EDEDED;
position: relative
}
.imgview{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 2
}
.imageLove{
  width: 30px;
  height: 30px;
}
.img{
  filter: blur(10px);
}
.text{
font-size: 12px;
}
.text view{
  margin-top:20rpx ;
text-align: center;
}
.music-item{
  width:250rpx;
  height:250rpx;
  left:250rpx;
  top:120rpx;
  position:absolute;
}
.transform{
  animation:run 10s linear 0.1s infinite;
-webkit-animation:run 10s linear 0.1s infinite;
}
.transformpause{
  animation-play-state:paused;
  -webkit-animation-play-state:paused;
}
.item-ing-one{
  width:100%;
  height:100%;
  border-radius:50%;
}
.music-img-two{
  width:100rpx;
  height:100rpx;
  position:absolute;
  left:75rpx;
  top:75rpx;
}
.slider{
  margin-top:50rpx; 
  width:500rpx;
  margin-left:125rpx;
  margin-bottom: 50rpx
}
@keyframes run{     
            from{     
                -webkit-transform:rotate(0deg);     
            }     
            to{     
                -webkit-transform:rotate(360deg);     
            }     
        }